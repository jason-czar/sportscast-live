# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Telegram Configuration (Required for TDLib)
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_PHONE=your_phone_number

# WebRTC Configuration (Optional - for custom TURN servers)
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your_turn_username
TURN_CREDENTIAL=your_turn_password

# FFmpeg Configuration
FFMPEG_THREADS=4
MAX_CONCURRENT_STREAMS=10

# Service URLs (for production deployment)
TDLIB_SERVICE_URL=http://tdlib-service:8080
WEBRTC_BRIDGE_URL=http://webrtc-bridge:8081

# Environment
ENVIRONMENT=production
NODE_ENV=production